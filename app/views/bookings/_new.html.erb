<h4 class="well well-sm">
  <%= "Appointment selected: " %><small><%= @timeslot.start_time.strftime('%A, %d %B %Y - %I:%M %p') %></small>
</h4>

<%= form_for [@company, @booking] do |f| %>
  <div class='form-group'>
    <%= f.label :notes %>
    <%= f.text_area :notes, rows: 3, class: 'form-control', placeholder: "Enter job information"%>
    <%= f.hidden_field :timeslot_id, :value => @timeslot.id %>
  </div>

  <div class='form-group'>
    <%= f.submit 'Ok', class: 'btn btn-success' %>
  </div>
<% end %>
