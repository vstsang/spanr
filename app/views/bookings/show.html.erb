<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="col-md-6">
      <br>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4>Booking Summary</h4>
        </div>
        <div class="panel-body">
          <table class="table success">
            <tbody>
              <tr>
                <td><strong>Date</strong></td>
                <td><%= @booking.timeslot.start_time.strftime('%A, %v') %></td>
              </tr>
              <tr>
                <td><strong>Time</strong></td>
                <td><%= @booking.timeslot.start_time.strftime('%I:%M %p') %></td>
              </tr>
              <tr>
                <td><strong>Your name</strong></td>
                <td><%= [@booking.first_name, @booking.last_name].reject(&:empty?).join(' ') %></td>
              </tr>
              <tr>
                <td><strong>Your address</strong></td>
                <td><%= @booking.address %></td>
              </tr>
              <tr>
                <td><strong>Your email</strong></td>
                <td><%= @booking.email %></td>
              </tr>
              <tr>
                <td><strong>Your mobile</strong></td>
                <td><%= @booking.mobile %></td>
              </tr>
              <tr>
                <td><strong>Notes</strong></td>
                <td><%= @booking.notes %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <br>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4>Company Information</h4>
        </div>
        <div class="panel-body">
          <table class="table">
            <tbody>
              <tr>
                <td><strong>Company</strong></td>
                <td><%= @booking.timeslot.tradesman.company.name %></td>
              </tr>
              <tr>
                <td><strong>Address</strong></td>
                <td><%= @booking.timeslot.tradesman.company.address %></td>
              </tr>
              <tr>
                <td><strong>Email</strong></td>
                <td><%= @booking.timeslot.tradesman.company.email %></td>
              </tr>
              <tr>
                <td><strong>Phone</strong></td>
                <td><%= @booking.timeslot.tradesman.company.phone %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="pull-right btn-group btn-group-xs">
        <%= link_to "Reschedule booking", [@company, @booking], method: :delete, class: 'btn btn-info', data: {confirm: "Delete booking?"} %>
        <%= link_to "Cancel booking", [@company, @booking], method: :delete, class: 'btn btn-warning', data: {confirm: "Cancel booking?"} %>
      </div>
    </div>
  </div>
  <div class="col-md-10 col-md-offset-1">
    <div class="col-md-6">
      <p><%= link_to "Add to Google Calendar", root_path, class: 'btn btn-xs btn-success' %></p>
      <p><%= link_to "Add to Outlook", root_path, class: 'btn btn-xs btn-success' %></p>
    </div>
  </div>
</div>
